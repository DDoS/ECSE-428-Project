extends ../layout

block content
    .page-header
        h3 Create Argument
    form.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.col-md-7
            textarea.form-control(name='argument',rows=2, id='arguments', placeholder='Type your thoughts', autofocus=true)

        .form-group.col-md-7
            button.col-sm-3.btn.btn-primary(type='submit')
                i.fa.fa-paper-plane
                | Enter
            button.col-md-offset-1.col-sm-3.btn.btn-primary(type='submit')
                i.fa.fa-remove
                | Cancel


