.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse',
                           data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-label.fa-comments-o
        | Project Mayhem
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title == 'All Questions' ? 'active' : undefined)
          a(href='/questions/find') All Questions
        if user
            li(class=title == 'Create New Question' ? 'active' : undefined)
                a(href='/questions/create') Create New Question
      ul.nav.navbar-nav.navbar-right
        if user
          li.dropdown(class=title == 'My Account' ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | #{user.username}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/users/account') My Account
              li.divider
              li
                a(href='/users/logout') Logout
        else
          li(class=title == 'Login' ? 'active' : undefined)
            a(href='/users/login') Login
          li(class=title == 'Create Account' ? 'active' : undefined)
            a(href='/users/create') Create Account