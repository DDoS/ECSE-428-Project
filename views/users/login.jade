extends ../layout

block content
  .page-header
    h3 title
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=csrfToken)
    .form-group
      label.col-sm-3.control-label(for='username') User Name
      .col-sm-7
        input.form-control(type='username', name='username', id='username', placeholder='User Name', autofocus=true)
    .form-group
      label.col-sm-3.control-label(for='password') Password
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Password')
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-label.fa-user
          | Login
        a.btn.btn-link(href='/forgot') Forgot your password?
    .form-group
      .col-sm-offset-3.col-sm-7
        hr
    
        
